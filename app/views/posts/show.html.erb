    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= @post.title%>
                    <small>Item Subheading</small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <%= image_tag @post.image, class:'img-responsive' %>
            </div>

            <div class="col-md-4">
                <h3>Project Description</h3>
                <p><%= @post.body %></p>
            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Related Projects</h3>
            </div>

            <%= @posts.each do |post| %>
               <%= link_to post_path(post) %>
                <%= image_tag post.image,class: 'img-responsive portfolio-item' %>
            <% end %>

        </div>
        <!-- /.row -->

        <hr>

    </div>